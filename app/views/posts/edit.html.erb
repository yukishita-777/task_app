<h2>スケジュール編集</h2>
<%= render "shared/error", object: @post %>
<%= form_for @post do |f| %>
    <table>
        <tr>
            <th><%= f.label :title, "タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        
        <tr>
            <th><%= f.label :start_day, "開始日時" %></th>
            <td><%= f.datetime_field :start_day %></td>
        </tr>
        
        <tr>
            <th><%= f.label :finish_day, "終了日時" %></th>
            <td><%= f.datetime_field :finish_day %></td>
        </tr>
        
        <tr>
            <th><%= f.label :memo, "メモ" %></th>
            <td><%= f.text_area :memo %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "編集を完了する" %></li>
            <li><%= link_to "スケジュール一覧に戻る", posts_path %></li>
        </ul>
    </div>
<% end %>