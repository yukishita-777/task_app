<%= form_with model: @post, url: search_path, method: :get, local: true do |form| %>
        <%= form.select :keyword, [['登録が古い順', 'id_asc'],
                                    ['登録が新しい順', 'id_desc'],
                                    ['開始日時が近い順', 'start_day_close'],
                                    ['開始日時が遠い順', 'start_day_far'],
                                   ] %>
        <%= form.submit "並び替え" %>
        
<% end %>