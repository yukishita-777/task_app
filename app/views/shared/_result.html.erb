   <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>タイトル</th>
                <th>開始日時</th>
                <th>終了日時</th>
                <th>メモ</th>
                <th>作成日時</th>
                <th>確認</th>
                <th>編集</th>
                <th>削除</th>
            </tr>
        </thead>
            
        <tbody>
            <% @posts.each do |post| %>
                <tr>
                    <td><%= post.id %></td>
                    <td><%= post.title %></td>
                    <td><%= post.start_day.to_s(:datetime_jp) %></td>
                    <td><%= post.finish_day.to_s(:datetime_jp) %></td>
                    <td><%= post.memo %></td>
                    <td><%= post.created_at.to_s(:datetime_jp) %></td>
                    <td>
                        <%= link_to "確認", post_path(post) %>
                    </td>
                    <td>
                        <%= link_to "編集", edit_post_path(post) %>
                    </td>
                    <td>
                        <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "削除しますか？？"} %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>